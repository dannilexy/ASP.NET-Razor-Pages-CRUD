@page
@model AbbyWeb.Pages.Categories.EditModel

<form method="post">

    <div class=" pt-4 m-3">
        <div class="row pb-2">
            <h2 class="pl-3 text-primary"> Edit Category</h2>

        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label>Category Name:</label>
            <input class="form-control" asp-for="Category.Name" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Display Order:</label>
            <input class="form-control" asp-for="Category.DisplayOrder" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Category.Id" />
        <input type="submit" class="btn btn-primary" value="Update Category" />
        <a asp-page="Index" class="btn btn-secondary">Back To List</a>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

