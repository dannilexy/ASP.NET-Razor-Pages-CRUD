@page
@model AbbyWeb.Pages.Categories.IndexModel

<div class="container p-3">
   
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary"> Category List</h2>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">Create Category</a>
        </div>
        <br />
        <br />

        <table class="table table-striped table-bordered" width="100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>


                @foreach (var Cat in Model.Categories)
                {
                    <tr>
                        <td width="50%">
                            @Cat.Name
                        </td>
                        <td width="30%">
                            @Cat.DisplayOrder
                        </td>
                        <td>
                            <a class="btn btn-primary mx-2" asp-page="Edit" asp-route-id="@Cat.Id"><i class="bi bi-edit-square"></i> Edit</a>
                            <a class="btn btn-danger mx-2" asp-route-id="@Cat.Id" asp-page="Delete"><i class="bi bi-edit-square"></i> Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>